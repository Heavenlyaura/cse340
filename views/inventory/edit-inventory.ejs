<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <%- messages() %>
    <% } else { res.redirect('/') } %>

      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <% if (error.msg !="Invalid value" ) {%>
              <li>
                <%= error.msg %>
              </li>
              <% } %>
                <% }) %>
        </ul>
        <% } %>

          <div class="form">
            <form action="/inv/update" method="post">
              <label for="classification_id">Classification: </label>
              <%- classificationList %>

                <label for="inv_make">Make: </label>
                <input type="text" required placeholder="min of 3 characters" name="inv_make" id="inv_make"
                  title="Enter Make" pattern=".{3,}" value="<%= locals.inv_make %>">

                <label for="inv_model">Model: </label>
                <input type="text" required placeholder="min of 3 characters" name="inv_model" id="inv_model"
                  title="Enter Model" pattern=".{3,}" value="<%= locals.inv_model %>">

                <label for="inv_description">Description</label>
                <textarea name="inv_description" id="inv_description" cols="30" rows="5"
                  placeholder="Enter vehicle description" required><%= locals.inv_description %></textarea>

                <label for="inv_image">Image path: </label>
                <input type="text" value="<%= locals.inv_image %>" name="inv_image" id="inv_image" required>

                <label for="inv_thumbnail">thumbnail path: </label>
                <input type="text" value="<%= locals.inv_thumbnail %>" name="inv_thumbnail" required id="inv_thumbnail">

                <label for="inv_price">Price:</label>
                <input type="text" required id="inv_price" name="inv_price" placeholder="digits or decimal"
                  pattern="\d+(\.\d+)?" title="Please enter a valid decimal number" value="<%= locals.inv_price %>">

                <label for="inv_year">Year: </label>
                <input type="text" pattern="\d{4}" title="Please enter a 4-digit number" required id="inv_year"
                  name="inv_year" value="<%= locals.inv_year %>">

                <label for="inv_miles">Mileage: </label>
                <input type="text" pattern="\d+" id="inv_miles" name="inv_miles" required placeholder="Enter Milage"
                  title="Enter a valid number" title="Please enter a valid integer" value="<%= locals.inv_miles %>">

                <label for="inv_color">Color: </label>
                <input type="text" id="inv_color" name="inv_color" required placeholder="Enter Milage"
                  title="Enter a valid number" title="Please enter a valid integer" value="<%= locals.inv_color %>">

                <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

                <input type="submit" value="Edit" id="submit">
            </form>
          </div>