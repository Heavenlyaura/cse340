  <%- messages() %>
    <% } else { res.redirect('/') } %>

      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <% if (error.msg !="Invalid value" ) {%>
              <li>
                <%= error.msg %>
              </li>
              <% } %>
                <% }) %>
        </ul>
        <% } %>
          <div class="management">
            <h2>Welcome <%=locals.accountData.account_firstname %>
            </h2>
            <% if (locals.accountData.account_type==='Client' ) { %>
              <h3>Update Account</h3>
              <ul>
                <li>
                  <a href="/account/update/<%= locals.accountData.account_id %>">Update account information</a>
                </li>
              </ul>
              <% } else { %>
                <h3>Update Account</h3>
                <ul>
                  <li>
                    <a href="/account/update/<%= locals.accountData.account_id %>">Update account information</a>
                  </li>
                </ul>
                <h3>Inventory Management</h3>
                <ul>
                  <li>
                    <a href="/inv/">Inventory Manger</a>
                  </li>
                </ul>
                <% } %>
