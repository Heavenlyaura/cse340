<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <%- messages() %>
    <% } else { res.redirect('/') } %>

      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <% if (error.msg !="Invalid value" ) {%>
              <li>
                <%= error.msg %>
              </li>
              <% } %>
                <% }) %>
        </ul>
        <% } %>
          <div class="form">
            <form action="/account/update" method="post">
              <label for="account_firstname">First name: </label>
              <input type="text" name="account_firstname" id="account_firstname" required placeholder="Goodness"
                value="<%= locals.accountData.account_firstname %>">

              <label for="account_lastname">Last name: </label>
              <input type="text" name="account_lastname" id="account_lastname" required placeholder="Okafor"
                value="<%= locals.accountData.account_lastname %>">

              <label for="account_email">Email: </label>
              <input type="email" name="account_email" id="account_email" required
                placeholder="goodnessokafor@example.com" value="<%= locals.accountData.account_email %>">

              <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">

              <input type="submit" id="submit" value="Update">
            </form>
          </div>

          <h3>Update Password</h3>
          <div class="form">
            <form action="/account/password" method="post">
              <label for="account_password">Password: </label>
              <div class="show-pword">
                <!-- This div is created to flex-row the direction of the password field and show button to be on the same position and direction -->
                <input type="password" name="account_password" id="account_password" required placeholder="************"
                  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                  title="Password must be at least 12 characters long and contains at leate 1 uppercase, digit and special charater.">
                <span class="show">Show</span>
              </div>
              <p>Your original Password will be changed</p>
              <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1
                special
                character</span>
              <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
              <input type="submit" value="Submit" id="submit">
            </form>
          </div>
          <script src="/js/showPassword.js"></script>
          <script src="/js/validInput.js"></script>